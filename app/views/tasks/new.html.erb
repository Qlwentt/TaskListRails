<h1>Create a new task</h1>
<form name="new-task" action="create" method="post">
	<%= form_for @my_task, url: {action: "create"} do |f| %>
		<%= f.label :title %>
		<%= f.text_field :title %>

		<%= f.label :description %>
		<%= f.text_field :description %>

		<%= f.label :completed_at %>
		<%= f.text_area :completed_at %>

		<%= f.submit %>



	<% end %>
